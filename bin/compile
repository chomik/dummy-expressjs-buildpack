#!/bin/sh

BUILD_DIR=$1

cd $BUILD_DIR

npm install express

cat > server.js <<- "EOF"
var express = require('express');
var app = express();

app.use('', express.static(__dirname + '/dist'));


var port = (process.env.PORT || 3000);

app.listen(port, function () {
  console.log('Example app listening on port ' + port + '!');
});
EOF
